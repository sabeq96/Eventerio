{
  "private": true,
  "name": "pwa",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --template index.template.html --no-prerender && npm run coppy_manifest",
    "serve": "npm run build && preact serve",
    "dev": "preact watch --template index.template.html",
    "lint": "eslint src",
    "deploy": "npm run build && firebase deploy --project pwa-test-10466",
    "coppy_manifest": "cp manifest.template.json ./build/manifest.json"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "if-env": "^1.0.0",
    "preact-cli": "^2.0.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "firebase": "^5.9.2",
    "flatpickr": "^4.5.7",
    "linkstate": "^1.1.1",
    "lodash": "^4.17.11",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "preact-fluid": "^0.9.1",
    "preact-router": "^2.6.1",
    "preact-sidenav": "^0.3.2",
    "react-dates": "^20.2.0",
    "statty": "^2.0.4",
    "styled-loaders": "^0.3.0"
  }
}
